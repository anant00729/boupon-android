<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.an2t.android.bouponapp.payment.RechargeSuccessActivity">

    <include
        android:id="@+id/top_bar"
        layout="@layout/content_main" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:elevation="12dp"
        app:srcCompat="@drawable/ic_arrow_back" />

    <ImageView
        android:id="@+id/img_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_success_logo" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="123"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_status"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:background="@color/grainsboro"
        android:layout_below="@id/tv_status"
        android:layout_width="match_parent"
        android:layout_height=".5dp" />

    <RelativeLayout
        android:id="@+id/rl_frame"
        android:gravity="center"
        android:padding="18dp"
        android:background="@drawable/success_paid_back"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_status"
        android:layout_width="60dp"
        android:layout_height="60dp">

        <ImageView
            app:srcCompat="@drawable/ic_paid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
             />


        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="#32BEA6"
            android:text="à§³"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_trans_id"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="Transaction"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_trans_message"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:text="Transaction"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_trans_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
